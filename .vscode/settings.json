{
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[markdown]": {
    // TODO:
    // "editor.defaultFormatter": "davidanson.vscode-markdownlint"
    "editor.wordWrap": "wordWrapColumn"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "cSpell.checkOnlyEnabledFileTypes": true,
  "cSpell.enableFiletypes": [
    "!*",
    "mdx",
    "jsx",
    "tsx",
    "!jsonc",
    "!javascript",
    "!typescript"
  ],
  "cSpell.ignoreWords": [
    "clsx",
    "couldn",
    "estree",
    "mapbox",
    "mdast",
    "mdxjs",
    "rehype",
    "unoptimized",
    "visitblockquote",
    "visitparagraph",
    "visittext",
    "visityaml"
  ],
  "cSpell.useGitignore": true,
  "cSpell.words": [
    "CONVERTKIT",
    "edivv",
    "Jafari",
    "rjaf",
    "rjaf.me",
    "tripwing",
    "webp"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // TODO: Other format events?
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "files.associations": {
    ".env.example": "dotenv",
    ".env.local": "dotenv",
    "*.css": "tailwindcss"
  },
  "github-actions.workflows.pinned.workflows": [".github/workflows/main.yml"],
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "pnpm run dev"
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000"
      },
      {
        "name": "Next.js: debug full stack",
        "type": "node-terminal",
        "request": "launch",
        "command": "pnpm run dev",
        "serverReadyAction": {
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      }
    ]
  },
  // TODO: When true, some errors happen. Try again later.
  "mdx.server.enable": false,
  "mdx.trace.server.format": "text",
  "mdx.trace.server.verbosity": "off",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ]
}
